<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="hr_contract_view_form_inherit" model="ir.ui.view">
            <field name="name">hr.contract.form.inherit</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
            <field name="arch" type="xml">
                <page name="information" position="after">
                    <page string="Seguridad social">
                        <group>
                            <group>
                                <field name="has_social_security"/>
                                <field name="social_security_id" attrs="{'readonly': [('has_social_security', '!=', 'Y')]}"  options="{'no_create': True, 'no_open': True}"/>
                            </group>
                            <group>
                                <field name="eps"/>
                                <field name="eps_amount" attrs="{'readonly': [('eps', '=', False)]}"/>
                                <field name="eps_credit" attrs="{'readonly': [('eps', '=', False)]}"/>
                            </group>
                        </group>
                    </page>
                </page>

            </field>
        </record>

    </data>
</odoo>