<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="hr_employee_inherit_form_view">
            <field name="name">hr.employee.form.view.inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <!--Quitamos datos -->
                <xpath expr="//field[@name='company_id']" position="replace"/>
                <xpath expr="//field[@name='job_id']" position="replace"/>

                <field name="job_title" position="attributes">
                     <attribute name="invisible">1</attribute>
                </field>
                <field name="category_ids" position="attributes">
                     <attribute name="invisible">1</attribute>
                </field>
                <xpath expr="//h1//field[@name='name']/.." position="after">
                    <group>
                        <field name="code"/>
                    </group>
                </xpath>
                <xpath expr="//field[@name='mobile_phone']" position="before">
                    <field name="job_id" readonly="1"/>
                    <field name="company_id" readonly="1"/>
                </xpath>
                <field name="department_id" position="before">
                    <field name="contract_type_id" readonly="1"/>
                    <field name="is_not_dependent" invisible="1"/>
                </field>
                <field name="department_id" position="attributes">
                     <attribute name="readonly">1</attribute>
                </field>
                <!--Quitamos datos-->
                <xpath expr="//sheet/group/group/field[@name='parent_id']" position="replace"/>
                <xpath expr="//sheet/group/group/field[@name='coach_id']" position="replace"/>
                <xpath expr="//sheet/group/group/field[@name='mobile_phone']" position="replace"/>
                <xpath expr="//sheet/group/group/field[@name='work_phone']" position="replace"/>
                <xpath expr="//sheet/group/group/field[@name='work_email']" position="replace"/>
                <xpath expr="//sheet/notebook/page/group/group/field[@name='bank_account_id']" position="replace"/>
                <xpath expr="//sheet/notebook/page/group/group/field[@name='marital']" position="replace"/>
                <xpath expr="//sheet/notebook/page/group/group/field[@name='spouse_complete_name']" position="replace"/>
                <xpath expr="//sheet/notebook/page/group/group/field[@name='spouse_birthdate']" position="replace"/>
                <xpath expr="//sheet/notebook/page/group/group/field[@name='emergency_contact']" position="replace"/>
                <xpath expr="//sheet/notebook/page/group/group/field[@name='emergency_phone']" position="replace"/>
                <xpath expr="//sheet/notebook/page/group/group/field[@name='children']" position="replace"/>

                <!-- Quitamos Zona Horaria de INFORMACION DE TRABAJO -->
                <xpath expr="//page[@name='public']/div/div/group[4]" position="replace"/>

                <!--Crea Grupo PUESTO dentro de INFORMACION DE TRABAJO-->
                <xpath expr="//page[@name='public']//group[@name='managers']" position="before">
                    <group name="info_job" string="Puesto">
                        <field name="job_id" options="{'no_create': True, 'no_open': True}"/>
                        <field name="department_id" options="{'no_create': True, 'no_open': True}"/>
                        <field name="parent_id" options="{'no_create': True, 'no_open': True}"/>
                        <field name="coach_id" string="Supervisor" options="{'no_create': True, 'no_open': True}"/>
                        <field name="company_id" options="{'no_create': True, 'no_open': True}" groups="base.group_multi_company"/>
                        <field name="contract_type_id" options="{'no_create': True, 'no_open': True}"/>
                        <field name="resource_calendar_id" options="{'no_create': True, 'no_open': True}"/>
                        <field name="mobile_phone" string="Celular Corporativo" widget="phone"/>
                        <field name="work_phone" string="Telf Corporativo" widget="phone"/>
                        <field name="work_email" string="Email Corporativo" widget="email"/>
                        <field name="tz" groups="hr.group_hr_user"/>
                    </group>
                    <group name="info_bank" string="Datos Bancario" attrs="{'invisible':[('is_not_dependent','=', True)]}">
                        <!--Cuenta Bancaria de sueldo-->
                        <field name="bank_account_id" options="{'no_create': True, 'no_open': True}"/>
                        <field name="account_type"/>
                        <field name="cci" help="Código de Cuenta Interbancaria"/>
                        <!--Cuenta Bancaria de CTS-->
                        <field name="cts_account" options="{'no_create': True, 'no_open': True}"/>
                        <field name="bank_id" options="{'no_create': True, 'no_open': True}"/>
                    </group>
                    <group name="info_pension" string="Régimen Pensionario" attrs="{'invisible':[('is_not_dependent','=', True)]}">
                        <field name="regimen_pensions"/>
                        <field name="afp_id" options="{'no_create': True}" attrs="{'invisible':[('regimen_pensions','in',['onp','srp'])]}"/>
                        <field name="afp_code" invisible="1"/>
                        <field name="commission_type" attrs="{'invisible':[('regimen_pensions','in',['onp','srp'])]}"/>
                        <field name="CUSPP" attrs="{'invisible':[('regimen_pensions','in',['onp','srp'])]}"/>
                        <field name="date_pensions" attrs="{'invisible':[('regimen_pensions','=','srp')]}"/>
                        <field name="type_work" attrs="{'invisible':[('regimen_pensions','in',['onp','srp'])]}"/>
                    </group>
                </xpath>
                <xpath expr="//page[@name='personal_information']" position="attributes">
                    <attribute name="string">Información Personal</attribute>
                </xpath>
                <xpath expr="//page[@name='personal_information']/group/group[1]" position="attributes">
                    <attribute name="string">Datos de Contacto</attribute>
                    <attribute name="name">data_contacto</attribute>
                </xpath>
                <xpath expr="//page[@name='personal_information']/group/group[2]" position="attributes">
                    <attribute name="string">Datos Personales</attribute>
                    <attribute name="name">data_personal</attribute>
                </xpath>
                <xpath expr="//page[@name='personal_information']/group/group[3]" position="attributes">
                    <attribute name="string">Dirección Actual</attribute>
                    <attribute name="name">data_address_actual</attribute>
                </xpath>

                <!--Agregar datos en Informacion Personal / Datos de Contacto-->
                <xpath expr="//sheet/notebook/page/group/group/field[@name='phone']" position="after">
                    <field name="mobile_personal"/>
                    <field name="emergency_contact"/>
                    <field name="emergency_phone"/>
                </xpath>

                <xpath expr="//sheet/notebook/page/group/group/field[@name='identification_id']" position="replace">
                    <label for="document_type" string="Identificación"/>
                    <div class="o_row">
                        <field name="document_type" placeholder="Tipo Documento" options="{'no_open': True, 'no_create': True}"/>
                        <span> </span>
                        <field name="identification_id" placeholder="Nro Documento"/>
                    </div>
                </xpath>
                <field name="gender" position="after">
                    <field name="marital"/>
                    <field name="spouse_complete_name" attrs="{'invisible': [('marital', 'not in', ['married', 'cohabitant'])]}" groups="hr.group_hr_user"/>
                    <field name="spouse_birthdate" attrs="{'invisible': [('marital', 'not in', ['married', 'cohabitant'])]}" groups="hr.group_hr_user"/>
                </field>

                <!-- Quitamos INFORMACION PERSONAL -->
                <xpath expr="//page[@name='personal_information']/group/group[7]" position="replace"/>
                <xpath expr="//page[@name='personal_information']/group/group[6]" position="replace"/>

                <field name="birthday" position="attributes">
                    <attribute name="required">1</attribute>
                </field>
                <field name="gender" position="attributes">
                    <attribute name="required">1</attribute>
                </field>

                <field name="user_id" position="attributes">
                     <attribute name="attrs">{'invisible':[('is_not_dependent','=', True)]}</attribute>
                </field>
                <xpath expr="//label[@for='barcode']" position="attributes">
                    <attribute name="attrs">{'invisible': [('is_not_dependent', '=', True)]}</attribute>
                </xpath>

                <xpath expr="//group[@name='identification_group']/div" position="attributes">
                    <attribute name="attrs">{'invisible':[('is_not_dependent','=', True)]}</attribute>
                </xpath>

                <field name="departure_description" position="after">
                    <field name="opinion"/>
                </field>
            </field>
        </record>

        <!--Agregar Tipo de Documento y Nro Documento -->
        <record id="view_employee_form_inherit" model="ir.ui.view">
            <field name="name">hr.employee.form.identification.inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr_employee_lastnames.view_employee_form_inherit"/>
            <field name="arch" type="xml">
                <data>
                <field name="firstname" position="attributes">
                    <attribute name="readonly">1</attribute>
                </field>
                <field name="lastname" position="attributes">
                    <attribute name="readonly">1</attribute>
                </field>
                <field name="lastname2" position="attributes">
                    <attribute name="readonly">1</attribute>
                </field>
                <xpath expr="//field[@name='passport_id']" position="before">
                    <field name="firstname"/>
                    <field name="lastname"/>
                    <field name="lastname2"/>
                </xpath>
                <xpath expr="//field[@name='passport_id']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='lastname2']" position="after">
                    <label for="document_type" string="Identificación"/>
                    <div class="o_row">
                        <field name="document_type" placeholder="Tipo Documento" readonly="1"/>
                        <span> </span>
                        <field name="identification_id" placeholder="Nro Documento" readonly="1"/>
                    </div>
                </xpath>
                </data>
            </field>
        </record>

        <record id="hr_kanban_view_employees" model="ir.ui.view">
            <field name="name">hr.employee.kanban</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.hr_kanban_view_employees"/>
            <field name="arch" type="xml">
                <div class="o_kanban_record_top" position="inside">
                    <div class="o_kanban_primary_right">
                        <field name="code"/>
                    </div>
                </div>
            </field>
        </record>

        <record id="view_employee_filter" model="ir.ui.view">
            <field name="name">hr.employee.search</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_filter"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="code"/>
                </field>
            </field>
        </record>

        <record id="view_employee_tree" model="ir.ui.view">
            <field name="name">hr.employee.tree</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_tree"/>
            <field name="arch" type="xml">
                 <field name="name" position="before">
                    <field name="code"/>
                </field>
            </field>
        </record>

    </data>
</odoo>